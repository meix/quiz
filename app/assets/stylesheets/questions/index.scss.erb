.widget-index {

  &:before{
    position: absolute;
    left: 10px;
    top: 88px;
    width: 71px;
    height: 53px;
    content: "";
    background-image: url(<%= asset_path "questions/season/bg-cloud-3.png" %>);
    background-size: 71px auto;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-color: transparent;
  }
  &:after {
    position: absolute;
    left: 40%;
    bottom: -56px;
    width: 71px;
    height: 53px;
    content: "";
    background-image: url(<%= asset_path "questions/season/bg-cloud-4.png" %>);
    background-position: 0 0;
    background-size: 71px auto;
    background-repeat: no-repeat;
  }

  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 768px;

  h1, h4, .item {
    @include font-mini();
  }

  .title {
    position: relative;
    text-align: center;
    z-index: 10;
    h1 {
      // @include text-shadow((
      //   0px 1px 0 #30c1fb, 
      //   0px 2px 0 #30c1fb,
      //   0px 3px 0 #30c1fb, 
      //   0px 4px 0 #30c1fb, 
      //   0px 5px 0 #30c1fb, 
      //   0px 6px 0 #30c1fb
      // ));
      // font-size: 60px;
      margin: 0;
    }
    h4 {
      @include text-shadow(1px 2px 0px #ff9000);
      font-size: 24px;
      line-height: 38px;
      height: 48px;
      margin: 0;
      background-image: url(<%= asset_path "questions/season/bg-ribbon.png" %>);
      background-size: 207px auto;
      background-position: 50% 50%;
      background-repeat: no-repeat;
    }
  }

  .btn-groups {
    margin: 30px;
    position: relative;
    z-index: 10;

    .item {
      @include flex-box();
      @include justify-content();
      width: 100%;
      .icon-ico {
        font-size: 30px;
        position: absolute;
        left: 50%;
        top: 50%;
        margin-left: -15px;
        margin-top: -15px;
      }
      .pure-button {
        display: inline-block;
        &:first-of-type {
          float: left;
          @include flex(9);
        }
        &:last-of-type {
          float: right;
          @include flex(1);
        }
      }
    }
  }
}