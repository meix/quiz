/*赛季模式下的公共样式*/

@font-face {
  font-family: "mini";
  src: url(<%= asset_path 'questions/webfont/mini.eot' %>); /* IE9*/
  src: url(<%= asset_path 'questions/webfont/mini.eot?#iefix' %>) format('embedded-opentype'), /* IE6-IE8 */
  url(<%= asset_path 'questions/webfont/mini.woff' %>) format('woff'), /* chrome、firefox */
  url(<%= asset_path 'questions/webfont/mini.ttf' %>) format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url(<%= asset_path 'questions/webfont/mini.svg#mini' %>) format('svg'); /* iOS 4.1- */
}

@font-face {
  font-family: "iconfont";
  src: url(<%= asset_path 'questions/season/iconfont/iconfont.eot' %>); /* IE9*/
  src: url(<%= asset_path 'questions/season/iconfont/iconfont.eot?#iefix' %>) format('embedded-opentype'), /* IE6-IE8 */
  url(<%= asset_path 'questions/season/iconfont/iconfont.woff' %>) format('woff'), /* chrome、firefox */
  url(<%= asset_path 'questions/season/iconfont/iconfont.ttf' %>) format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url(<%= asset_path 'questions/season/iconfont/iconfont.svg#iconfont' %>) format('svg'); /* iOS 4.1- */
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  //-webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.iconfont.iconfixed {
  position: relative;
  &:before {
    position: absolute;
    line-height: 1;
    top: 0;
    left: 0;
  }
}
.icon-ico:before { content: "\e603"; }
.icon-deji:before { content: "\e602"; }
.icon-home:before { content: "\e601"; }


#main {
  @include linear-gradient((top, #209ae7, #34b8f8));
  background-image: -webkit-gradient(linear, top, from(#209ae7), to(#34b8f8));
  &:after {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    content: "";
    background-image: url(<%= asset_path "questions/season/bg-cloud-1.png" %>);
    background-size: 50% auto;
    background-position: 100% 100%;
    background-repeat: no-repeat;
    background-color: transparent;
  }
  &:before {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    content: "";
    background-image: url(<%= asset_path "questions/season/bg-cloud-2.png" %>);
    background-position: 0 50%;
    background-size: 50% auto;
    background-repeat: no-repeat;
  }
  @include flex-box();
  @include align-items();
  @include justify-content();
  @include flex-direction(column);
}

.pure-button {
  @include border-radius(10px);
  font-family: 'mini';
  position: relative;
  margin: 10px;
  color: #fff;
  font-size: 30px;
  font-weight: 700;
  padding: .7em .5em .8em .5em;
  line-height: 14px;
  &.disabled {
    background-color: #DFDFDF;
    @include text-shadow(1px 2px 0px darken(#999, 15%));
    @include box-shadow((
      0 -5px 0 0 darken(#DFDFDF, 15%) inset,
      0 3px 4px 0 rgba(0, 0, 0, .1)
    ));
  }
  &.hot {
    background-color: $brand-hot;
    @include text-shadow(1px 2px 0px #d32b3a);
    @include box-shadow((
      0 -5px 0 0 darken($brand-hot, 15%) inset,
      0 3px 4px 0 rgba(0, 0, 0, .1)
    ));
  }
  &.wheat {
    background-color: $brand-wheat;
    @include text-shadow(1px 2px 0px #ff9000);
    @include box-shadow((
      0 -5px 0 0 darken($brand-wheat, 15%) inset,
      0 3px 4px 0 rgba(0, 0, 0, .1)
    ));
  }
}

.box {
  @include border-radius(10px);
  @include box-shadow((
    0 -4px 0 0 #c8f2ff inset, 
    0 3px 4px 0 rgba(21, 126, 251, .6)
  ));
  color: #333;
  background-color: #fff;
}