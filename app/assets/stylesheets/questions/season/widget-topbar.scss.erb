@keyframes 'timeAnimate' {
  100%  {
    @include transform(rotate(360deg));
    //-webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes 'timeAnimate' {
  100%  {
    @include transform(rotate(360deg));
    //-webkit-transform: rotate(360deg);
  }
}

.widget-topbar {
  @include flex-box();
  width: 100%;
  max-width: 768px;
  
  .icon-deji {
    font-size: 26px;
    &:before {
      left: 5px;
      top: 5px;
    }
  }
  .number, 
  .stopwatch {
    @include flex(1);
    position: relative;
    margin: 15px;
    i {
      font-style: normal;
    }
    .icon {
      @include border-radius(100%);
      @include box-shadow((
        0 -2px 0 0 #02b9c3 inset,
        0 2px 3px 0 rgba(21, 126, 251, .6)
      ));
      background-color: #04cad3;
      width: 38px;
      height: 38px;
      position: relative;
      float: left;
      z-index: 10;
    }
    .txt {
      @include border-radius(20px);
      @include box-shadow((
        0 -4px 0 0 #c8f2ff inset, 0 3px 4px 0 rgba(21, 126, 251, .6)
      ));
      width: 100%;
      padding: .5em 0;
      font-size: 14px;
      text-indent: -10px;
      text-align: center;
      color: #c36002;
      background-color: #fff;
      position: relative;
      top: 3px;
    }
  }
  .stopwatch {
    text-align: center;
    &:before {
      content: "";
      position: absolute;
      left: 13px;
      top: -3px;
      background-color: #ffbc0a;
      width: 12px;
      height: 10px;
      @include border-radius(20px);
    }
    .plate {
      position: relative;
      width: 30px;
      height: 30px;
      left: 4px;
      top: 4px;
      background-color: #fff;
      @include border-radius(100%);
      &:before {
        @include border-radius(100%);
        width: 4px;
        height: 4px;
        content: "";
        position: absolute;
        z-index: 1;
        left: 50%;
        top: 50%;
        margin-left: -4px;
        margin-top: -4px;
        background-color: #fff;
        border: 2px #34485e solid;
      }
      .pointer {
        -webkit-transform-origin:50% 50%;
        -webkit-animation: timeAnimate 3s linear 0s infinite normal;
        animation: timeAnimate 3s linear 0s infinite normal;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        i {
          display: block;
          position: absolute;
          left: 50%;
          top: 50%;
          background-color: #fcbb07;
          width: 43%;
          height: 2px;
          margin-top: -1px;
        }
      }
    }
  }
}