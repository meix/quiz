.widget-rule {

  color: #000;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 768px;

  .widget-bd {
    margin: auto 10%;
    padding: 0 25px;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
  }

  .pure-button {
    width: 100%;
    margin: 30px 0;
  }

  h1 {
    text-align: center;
    font-family: 'mini';
    font-size: 40px;
    font-weight: 700;
    height: 47px;
    color: #adff62;
    @include text-shadow((
      //-1px -1px 0 #22921f,
      //-1px 0 0 #22921f,
      0px 1px 0 #e4ff9b, 
      0px 2px 0 #52aa2b,
      0px 2px 0 #52aa2b,
      0px 2px 0 #52aa2b,
      0px 4px 0 #22921f,
      0px 4px 0 #22921f,
      0px 4px 0 #22921f,
      0px 6px 3px #a7eab2
    ));
    //@include text-stroke(0.1px #22921f);
    //-webkit-text-fill-color: #fff;
  }
  ol {
    line-height: 1.5;
    list-style-position: inside;
  }
}