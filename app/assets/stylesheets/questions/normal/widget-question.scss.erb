.page-question {
  #main {
    @include transition(background .5s ease);
    background-color: #44a3e9;
    &.right {
      background-color: #60bc68;
    }
    &.error {
      background-color: #ff4c4b;
    }
    &.limit {
      background-color: #a88065;
    }
    .widget-footer {
      visibility: hidden;
    }
  }
}

#wrapper {
  min-height: 100%;
  width: 100%;
}

.widget-answer, 
.widget-limit, 
.widget-question {
  width: 100%;
  box-sizing: border-box;
  .animated {
    -webkit-animation-duration: .6s;
            animation-duration: .6s;
    -webkit-animation-timing-function: ease;
            animation-timing-function: ease;
  }
  .item {
    @include flex-box();
    @include align-items();
    @include border-radius(6px);
    text-align: left;
    white-space: normal;
    background-color: #fff;
    padding: 20px;
    color: #333;
    line-height: 1.5;
    margin: 0 0 15px 0;
    .ordinal {
      color: #ff7500;
      padding-right: 15px;
      @include flex(0 1 auto);
    }
    .desc {
      @include flex(1);
    }
  }
}

.widget-question {
  padding: 15px 15px 0 15px;
  input[type=radio] {
    display: none;
  }
  .title {
    text-align: left;
    margin: 1.5em 0;
  }
  .options {
    .item {
      &:nth-child(1) {
        -webkit-animation-delay: .3s;
                animation-delay: .3s
      }
      &:nth-child(2) {
        -webkit-animation-delay: .35s;
                animation-delay: .35s
      }
      &:nth-child(3) {
        -webkit-animation-delay: .4s;
                animation-delay: .4s
      }
      &:nth-child(4) {
        -webkit-animation-delay: .45s;
                animation-delay: .45s
      }
    }
  }
}


.widget-answer,
.widget-limit {
  padding: 0 15px 55px 15px;
  .widget-hd {
    padding-top: 15px;
    figure.iconfont {
      height: 120px;
      font-size: 120px;
      text-align: center;
      margin: 0 auto;
      position: relative;
      &:before {
        line-height: 1;
      }
    }
  }
}

.widget-answer {
  .diamond {
    text-align: center;
    font-size: 24px;
    line-height: 1.5;
    font-weight: 400;
  }
  .icon-iconzuanshi {
    display: inline-block;
    width: 24px;
    height: 28px;
    margin-right: 10px;
    font-size: 28px;
    vertical-align: -5px;
  }
  .answer,
  .analyse {
    margin: 15px 0 0 0;
    dt {
      text-align: left;
      font-size: 14px;
      margin-bottom: 5px;
    }
  }
}

.widget-limit {
  .tips {
    margin: 2em auto;
  }
  .item {
    @include justify-content();
  }
}