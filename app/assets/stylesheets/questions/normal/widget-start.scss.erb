.tips-finished {
  @include flex-box();
  @include align-items();
  @include justify-content();
  position: absolute;
  height: 100px;
  bottom: 84px;
  width: 100%;
  color: #fff;
  text-align: center;
}

.btn-start {
  @include border-radius(100%);
  display: inline-block;
  width: 100px;
  height: 100px;
  background-color: #ff4c4b;
  color: #fff;
  text-decoration: none;
  text-align: center;
  font-size: 24px;
  line-height: 100px;
  position: absolute;
  left: 50%;
  bottom: 16%;
  margin-left: -50px;
}

