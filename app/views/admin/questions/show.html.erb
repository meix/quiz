<section class="main padder">
  <div class="row">
    <style>
    .main .row:nth-child(2) td,.main .row:nth-child(2) th{
      text-align:center
      }
    .table th{
      background-color:#eee!important
      }
    .table th,.table td{
      border:1px solid #ddd
      }
    </style>

    <div class="row">
      <section class="col-lg-12">
        <div class="panel">
          <header class="panel-heading">题目信息</header>
          <table class="table table-striped m-b-none text-small">
            <tbody>
              <tr><th width="150">题库名称：</th><td class="text-left"><%= @record.title %></td></tr>
              <tr><th>题目等级：</th><td class="text-left"><%= @record.level %></td></tr>
              <tr><th>题目类型：</th><td class="text-left"><%= @record.category %></td></tr>
              <tr><th>正确答案：</th><td class="text-left"><%= @record.answer %></td></tr>
              <tr><th>题目解析：</th><td class="text-left"><%= @record.explain %></td></tr>
              <tr><th>当前状态：</th><td class="text-left"><%= question_status(@record.status) %></td></tr>
            </tbody>
            <tfoot>
                <tr>
                  <th class="row" colspan="2">
                    <a class="btn btn-inverse" href="/admin/questions/">返回列表</a>
                  </th>
                </tr>
              </tfoot>
          </table>
        </div>
      </section>
    </div>
   </div>
</section>