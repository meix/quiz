<div class="bg clearfix padder m-b">
  <h3>编辑题目 <%= @record.title %></h3>
</div>
<section class="col-lg-10">
  <div class="panel-body">
    <%= form_for([:admin, @record], html: {class: "form-horizontal", id: "ticket-type-1"}) do |f| %>
      <div class="form-group" id="ticket-name">
        <label class="col-lg-3 control-label">题目名称<span>*</span></label>
        <div class="col-lg-9">
          <%= f.text_field :title, class: "form-control", placeholder: "输入题目名称", data: {required: "true"} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">正确答案<span>*</span></label>
        <div class="col-lg-9">
          <%= f.text_field :answer, class: "form-control", placeholder: "输入正确答案", data: {required: "true"} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">题目等级<span>*</span></label>
        <div class="col-lg-9">
          <%= f.text_field :level, class: "form-control", placeholder: "输入题目等级", data: {required: "true"} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">题目类型<span>*</span></label>
        <div class="col-lg-9">
          <%= f.text_field :category, class: "form-control", placeholder: "输入题目类型", data: {required: "true"} %>
        </div>
      </div>                  

      <div class="form-group">
        <label class="col-lg-3 control-label">题目解析<span>*</span></label>
        <div class="col-lg-9">
          <%= f.text_area :explain, class: "form-control", rows: 5, data: {rangelength: "[20,200]"} %>
        </div>
      </div>

      <div class="form-group" id="ticket-name">
        <label class="col-lg-3 control-label">状态</label>
        <div class="col-lg-9" style="margin:8px 0">
          <%= f.radio_button :status, 0 %>&nbsp;&nbsp;<label for="question_status_0">上线</label>&nbsp;&nbsp;
          <%= f.radio_button :status, 1 %>&nbsp;&nbsp;<label for="question_status_1">下线</label>&nbsp;&nbsp;
          <%= f.radio_button :status, 2 %>&nbsp;&nbsp;<label for="question_status_2">删除</label>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-9 col-lg-offset-3">
          <a href="/admin/questions" class="btn btn-white">取消</a>&nbsp;&nbsp;
          <button type="submit" class="btn btn-primary">保存</button>
        </div>
      </div>
    <% end %>
  </div>
</section>